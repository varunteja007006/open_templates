{
  "name": "my-turbo-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "dev:starter-convex": "turbo dev --filter=starter-convex",
    "dev:starter-app-convex": "turbo dev --filter=starter-app-convex",
    "dev:starter-app-trpc": "turbo dev --filter=starter-app-trpc",
    "dev:starter-app": "turbo dev --filter=starter-app",
    "build:starter-convex": "turbo build --filter=starter-convex",
    "build:starter-app-convex": "turbo build --filter=starter-app-convex",
    "build:starter-app-trpc": "turbo build --filter=starter-app-trpc",
    "build:starter-app": "turbo build --filter=starter-app",
    "buildDeploy:starter-app-trpc": "turbo build --filter=@workspace/starter-trpc-backend drizzle:push && turbo build --filter=starter-app-trpc",
    "start:starter-app-convex": "pnpm --filter=starter-app-convex start",
    "start:starter-app-trpc": "pnpm --filter=starter-app-trpc start",
    "start:starter-app": "pnpm --filter=starter-app start",
    "push:starter-trpc-backend": "turbo --filter=@workspace/starter-trpc-backend drizzle:push",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20"
  }
}